<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOTOBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorOTOBlue</item>
    </style>
    <style name="cardViewStyle" parent="CardView.Light">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/colorOTOBackground</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:shadowColor">#14808080</item>
    </style>
</resources>
