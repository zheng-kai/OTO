<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorOTOBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:background="@drawable/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <ImageView
                android:id="@+id/img_scan_crowdsource_back"
                android:src="@color/colorOTOWhite"
                android:layout_marginStart="22dp"
                android:padding="12dp"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="众包人员取件"
                android:textColor="@color/colorOTOWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </android.support.v7.widget.Toolbar>
    <TextView
            android:layout_marginTop="14dp"
            android:layout_marginStart="26dp"
            android:text="地点：天津市xxxxxxxxxxxxxx"
            android:textSize="12sp"
            android:textColor="@color/colorOTOBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:textSize="14sp"
            android:textColor="@drawable/button_text_color"
            android:text="新的智能环保箱"
            android:background="@drawable/button_background_large"
            android:id="@+id/btn_crowdsource_post"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </Button>
    <Button
            android:textSize="14sp"
            android:textColor="@drawable/button_text_color"
            android:text="我要取件"
            android:background="@drawable/button_background_large"
            android:id="@+id/btn_crowdsource_pick_up"
            android:layout_marginTop="18dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </Button>
    <android.support.v7.widget.CardView
            android:id="@+id/cd_scan_crowdsource_boxes"
            android:visibility="invisible"
            style="@style/cardViewStyle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_scan_crowdsource_confirm"
                        app:layout_constraintTop_toTopOf="@+id/btn_scan_crowdsource_confirm"
                        android:layout_marginStart="18dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/colorOTOBlack"
                        android:text="请选择箱子的尺寸"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_scan_crowdsource_confirm"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="19dp"
                        android:textSize="12sp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/button_background"
                        android:textColor="@drawable/button_text_color"
                        android:text="确定"
                        android:layout_width="58dp"
                        android:layout_height="18dp"/>
            </android.support.constraint.ConstraintLayout>
            <GridView
                    android:id="@+id/gridview_scan_crowdsource"
                    android:layout_marginEnd="19dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="16dp"
                    android:numColumns="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <include
            android:id="@+id/scan_crowdsource_navigation"
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
    />
</LinearLayout>