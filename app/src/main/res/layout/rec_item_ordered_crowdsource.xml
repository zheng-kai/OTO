<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:paddingBottom="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            android:text="智能环保箱编号：158931532133013"
            android:id="@+id/tv_rec_box_id_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_rec_box_id_crowdsource"
            android:layout_marginTop="5dp"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            android:text="联系人电话：182****1548"
            android:id="@+id/tv_rec_phone_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintTop_toBottomOf="@+id/tv_rec_phone_crowdsource"
            android:layout_marginTop="5dp"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            android:text="目的地：xxxxxxxxxxxxxxxxxxx"
            android:id="@+id/tv_rec_destination_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginStart="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_rec_destination_crowdsource"
            android:layout_marginTop="5dp"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            android:text="该单价格：10元"
            android:id="@+id/tv_rec_price_ordered_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@drawable/button_text_color"
            android:text="取消接单"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btn_rec_cancel_ordered_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="22dp"/>
    <Button
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@drawable/button_text_color"
            android:text="拨打电话"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_rec_cancel_ordered_crowdsource"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/btn_rec_call_crowdsource"
            android:layout_width="wrap_content"
            android:layout_height="22dp"/>
</android.support.constraint.ConstraintLayout>