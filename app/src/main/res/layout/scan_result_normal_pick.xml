<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/colorOTOBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            android:background="@drawable/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <ImageView
                android:id="@+id/img_pick_up_back"
                android:background="@color/colorOTOWhite"
                android:layout_marginStart="22dp"
                android:layout_width="8dp"
                android:layout_height="15dp"/>
        <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="i-信鸽"
                android:textColor="@color/colorOTOWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/img_pick_up_refresh"
                android:layout_gravity="end|center_vertical"
                android:src="@mipmap/refresh"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_marginEnd="36dp"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
            style="@style/cardViewStyle"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="15sp"
                    android:text="订单详情"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ai空间12345678910"
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="12sp"/>
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天津市xxxxxxxxxxxx"
                    android:textColor="@color/colorOTOGray"
                    android:textSize="10sp"/>
            <android.support.v7.widget.RecyclerView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <include
            android:id="@+id/transport_pick_up_navigation"
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
    />
</LinearLayout>