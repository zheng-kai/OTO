<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/colorOTOBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_post"
            android:background="@drawable/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <ImageView
                android:id="@+id/img_post_pay_back"
                android:background="@color/colorOTOWhite"
                android:layout_marginStart="22dp"
                android:layout_width="8dp"
                android:layout_height="15dp"/>
        <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="我要寄件"
                android:textColor="@color/colorOTOWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView

            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="15dp"
                    android:text="寄件信息确认"
                    android:textSize="15sp"
                    android:textColor="@color/colorOTOBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="重量：1kg"
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="单价：10元/kg"
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="应付金额：10元"
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="箱子类型：A"
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="19dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="发件人："
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="张三"
                            android:textColor="@color/colorOTOGray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="联系电话："
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="188888888888"
                            android:textColor="@color/colorOTOGray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="收件人："
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="李四"
                            android:textColor="@color/colorOTOGray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="联系电话："
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="1824226562"
                            android:textColor="@color/colorOTOGray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="收件地址："
                            android:textColor="@color/colorOTOBlack"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="xxxxxxxxxxxxxxxxxxxxx"
                            android:textColor="@color/colorOTOGray"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                    android:layout_marginTop="8dp"
                    android:text="内容说明："
                    android:textSize="10sp"
                    android:textColor="@color/colorOTOBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:elevation="4dp"
                    android:paddingStart="13dp"
                    android:layout_marginTop="10dp"
                    android:hint="输入寄件内容描述"
                    android:textSize="8sp"
                    android:gravity="start"
                    android:textColorHint="@color/colorOTOGray"
                    android:layout_width="match_parent"
                    android:layout_height="133dp"/>
            <LinearLayout
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <FrameLayout android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content">
                    <Button
                            android:text="提醒收件人付款"
                            android:textSize="8sp"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background_blue"
                            android:layout_gravity="center"
                            android:id="@+id/btn_receiver_pay"
                            android:layout_width="73dp"
                            android:layout_height="19dp"/>
                </FrameLayout>
                <FrameLayout android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content">
                    <Button
                            android:text="付款"
                            android:textSize="8sp"
                            android:textColor="@color/white"
                            android:background="@drawable/button_background_red"
                            android:layout_gravity="center"
                            android:id="@+id/btn_pay"
                            android:layout_width="73dp"
                            android:layout_height="19dp"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <include
            android:id="@+id/scan_normal_post_pay_navigation"
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
    />
</LinearLayout>