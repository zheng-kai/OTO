<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        tools:context=".personal.vehicle.VehicleActivity">

    <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/home_personal_toolbar"/>

    <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="71dp"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

            <EditText
                    android:id="@+id/et_name"
                    android:backgroundTint="#A9A9A9"
                    android:textColorHint="@color/colorOTOBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorOTOBlack"
                    android:hint="车辆所有人(驾驶本姓名)"
                    android:inputType="text"
                    android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <EditText
                    android:id="@+id/et_license"
                    android:backgroundTint="#A9A9A9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorOTOBlack"
                    android:hint="车牌号"
                    android:inputType="text"
                    android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <Button
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:textColor="#ff121212"
                android:text="提交认证"/>
    </LinearLayout>


    <include
            android:layout_width="match_parent"
            android:layout_height="48dp"
            layout="@layout/personal_navigation_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>