<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#F7F7F7">
    <include android:layout_height="wrap_content"
             android:layout_width="match_parent"
             layout="@layout/home_personal_toolbar"/>

    <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="71dp"
            android:orientation="vertical">
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            app:cardCornerRadius="8dp"
                                            app:cardBackgroundColor="@color/colorOTOWhite"
                                            app:cardElevation="4dp"
                                            android:layout_marginHorizontal="6dp"
                                            android:layout_marginTop="10dp">
            <android.support.constraint.Constraints android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/avatar"
                        android:src="@color/colorOTOBlue"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="15dp"/>
                <TextView
                        android:id="@+id/name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tel"
                        app:layout_constraintStart_toEndOf="@id/avatar"
                        android:layout_width="29dp"
                        android:layout_height="14dp"
                        android:text="姓名"
                        android:textColor="#ff121212"
                        android:textSize="15sp"
                />
                <TextView
                        android:id="@+id/tel"
                        android:layout_width="103dp"
                        android:layout_height="8dp"
                        android:text="TEL:18246126513"
                        android:textColor="#ff121212"
                        android:textSize="12sp"
                />
            </android.support.constraint.Constraints>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="8dp"
                                            app:cardBackgroundColor="@color/colorOTOWhite"
                                            app:cardElevation="4dp"
                                            android:layout_marginHorizontal="6dp"
                                            android:layout_marginTop="5dp">
            <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="人脸识别验证(未验证)"
                    android:textColor="#ff121212"
                    android:textSize="15sp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            app:cardBackgroundColor="@color/colorOTOWhite"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="8dp"
                                            app:cardElevation="4dp"
                                            android:layout_marginHorizontal="6dp"
                                            android:layout_marginTop="5dp">
            <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="顺丰私家车认证(未验证)"
                    android:textColor="#ff121212"
                    android:textSize="15sp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            app:cardBackgroundColor="@color/colorOTOWhite"
                                            app:cardCornerRadius="8dp"
                                            app:cardElevation="4dp"
                                            android:layout_marginHorizontal="6dp"
                                            android:layout_marginTop="5dp">
            <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="众包人员认证(未验证)"
                    android:textColor="#ff121212"
                    android:textSize="15sp"
            />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            app:cardCornerRadius="8dp"
                                            app:cardElevation="4dp"
                                            app:cardBackgroundColor="@color/colorOTOWhite"
                                            android:layout_marginHorizontal="6dp"
                                            android:layout_marginTop="5dp">
            <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="管理常用联系人"
                    android:textColor="#ff121212"
                    android:textSize="15sp"
            />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <include android:layout_width="match_parent"
             android:layout_height="48dp"
             layout="@layout/navigation_layout"
             app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>