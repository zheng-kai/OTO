<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorOTOBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_post"
            android:background="@drawable/toolbar_background"
            android:layout_width="match_parent"
            android:layout_height="48dp">
        <ImageView
                android:id="@+id/img_post_back"
                android:background="@color/colorOTOWhite"
                android:layout_marginStart="22dp"
                android:layout_width="8dp"
                android:layout_height="15dp"/>
        <TextView
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="我要寄件"
                android:textColor="@color/colorOTOWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
            android:id="@+id/frame_normal_post_dialog"
            android:visibility="gone"
            android:elevation="10dp"
            android:background="@color/colorOTOGreen"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_post"
            android:layout_width="match_parent"
            android:layout_height="44dp">
        <TextView
                android:layout_gravity="center"
                android:text="请关闭环保智能箱"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <android.support.v7.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/toolbar_post"
            app:layout_constraintBottom_toTopOf="@+id/scan_normal_post_navigation"
            style="@style/cardViewStyle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="23dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="16dp"
                    android:text="填写收件人信息"
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <android.support.v7.widget.CardView
                    app:cardBackgroundColor="@color/colorOTOBackground"
                    app:cardCornerRadius="2dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:paddingStart="16dp"
                        android:paddingEnd="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="10sp"
                                android:textColor="@color/colorOTOBlack"
                                android:text="姓名："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <EditText
                                android:textColorHint="@color/colorOTOGray"
                                android:background="@color/white"
                                android:textColor="@color/colorOTOGray"
                                android:textSize="8sp"
                                android:hint="输入收件人姓名"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autofillHints="输入收件人姓名"
                                android:inputType="text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="10sp"
                                android:textColor="@color/colorOTOBlack"
                                android:text="电话："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <EditText
                                android:textColorHint="@color/colorOTOGray"
                                android:background="@color/white"
                                android:textColor="@color/colorOTOGray"
                                android:textSize="8sp"
                                android:hint="输入收件人联系电话"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="10sp"
                                android:textColor="@color/colorOTOBlack"
                                android:text="地点："
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <Spinner
                                        android:background="@color/white"
                                        android:layout_width="53dp"
                                        android:layout_height="13dp"/>
                                <Spinner
                                        android:background="@color/white"
                                        android:layout_marginStart="7dp"
                                        android:layout_width="53dp"
                                        android:layout_height="13dp"/>
                                <Spinner
                                        android:background="@color/white"
                                        android:layout_marginStart="7dp"
                                        android:layout_width="53dp"
                                        android:layout_height="13dp"/>
                            </LinearLayout>
                            <EditText
                                    android:textColorHint="@color/colorOTOGray"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginTop="7dp"
                                    android:background="@color/white"
                                    android:textColor="@color/colorOTOGray"
                                    android:textSize="8sp"
                                    android:hint="请在此处输入详细地址"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                            android:id="@+id/btn_normal_custom_post"
                            android:textSize="8sp"
                            android:textColor="@color/colorOTOBlack"
                            android:text="寄件"
                            android:layout_marginBottom="9dp"
                            android:layout_marginTop="11dp"
                            android:layout_gravity="end"
                            android:background="@drawable/button_background_white_green"
                            android:layout_width="40dp"
                            android:layout_height="14dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_normal_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <include
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/scan_normal_post_navigation"
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
    />

</android.support.constraint.ConstraintLayout>