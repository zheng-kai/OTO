<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/colorOTOBackground"
        android:background="@color/colorOTOBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:paddingStart="16dp"
            android:paddingEnd="17dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="10sp"
                    android:text="联系人："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_normal_post_name"
                    android:textColor="@color/colorOTOGray"
                    android:textSize="8sp"
                    android:text="Jack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            <Button
                    android:visibility="invisible"
                    android:background="@drawable/button_normal"
                    android:textSize="8sp"
                    android:text="寄件"
                    android:textColor="@color/colorOTOBlack"
                    android:id="@+id/btn_normal_post"
                    android:layout_width="40dp"
                    android:layout_height="14dp"/>
            <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_normal_post_select"
                    android:background="@mipmap/checkout_unselected"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="10sp"
                    android:text="联系电话："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_normal_post_phone"
                    android:textColor="@color/colorOTOGray"
                    android:textSize="8sp"
                    android:text="12345678910"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginBottom="11dp"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/colorOTOBlack"
                    android:textSize="10sp"
                    android:text="收货地点："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_normal_post_location"
                    android:textColor="@color/colorOTOGray"
                    android:textSize="8sp"
                    android:text="xxxxxxxxxxxxxx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>