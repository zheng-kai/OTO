<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@drawable/toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <ImageView
                android:padding="15dp"
                android:src="@mipmap/home"
                android:id="@+id/img_home"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="跳转至home"/>
    </FrameLayout>
    <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <ImageView
                android:padding="15dp"
                android:src="@mipmap/transport"
                android:id="@+id/img_transport"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="跳转至transport"/>
    </FrameLayout>
    <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <ImageView
                android:padding="15dp"
                android:src="@mipmap/personal"
                android:id="@+id/img_personal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="跳转至personal"/>
    </FrameLayout>
</LinearLayout>